@model SnacksStore.Models.ProductsStock
@{
    Layout = null;
}

<h2>Buy Product</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form onsubmit="return BuyProducts(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.ProductID)
            @Html.HiddenFor(model => model.ProductName)
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>

                <div>
                    <h4> @Html.DisplayFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } }) $ @Html.DisplayFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })</h4>
                </div><div>
                    <div>
                        Stock:  @Html.DisplayFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    <div>
                        <h5>Select how many do you want to buy:</h5>
                <input type="text" name="quantity" />
                        

                    </div><span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>
