@model SnacksStore.Models.ProductsStock
@{
    Layout = null;
}

<h2>Product</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form onsubmit="return SubmitAddEdit(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.ProductID)
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                @Html.LabelFor(model => model.ProductName)
                <div>
                    @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                    </div><div>
                
                @Html.LabelFor(model => model.ProductType)
                   
                @Html.DropDownListFor(model => model.ProductType, (IEnumerable<SelectListItem>)ViewBag.ProductTypes, htmlAttributes: new { @class = "form-control" })
                </div><div>
    @Html.LabelFor(model => model.Price)
    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
</div><div>
    @Html.LabelFor(model => model.quantity)
    @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })

</div><div>
    @Html.LabelFor(model => model.available)
    
    <input type="checkbox" name="available" value="true" />



</div><span asp-validation-for="ProductName" class="text-danger"></span>
</div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
